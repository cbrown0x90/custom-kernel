pkgname=linux-ulm
pkgver=4.5.3
pkgrel=1
license=('GPL')
arch=('x86_64')
install=${pkgname}.install
source=("https://www.kernel.org/pub/linux/kernel/v4.x/linux-${pkgver}.tar.xz"
		"https://raw.githubusercontent.com/free-city-of-ulm/custom-kernel/master/Sources/${pkgname}.config"
		"https://raw.githubusercontent.com/free-city-of-ulm/custom-kernel/master/Sources/logo_linux_clut224.ppm"
		"https://raw.githubusercontent.com/free-city-of-ulm/custom-kernel/master/Sources/${pkgname}.preset")
md5sums=('7de54a88f25722e498d612f58178dc6c'
         '0e2436cf9c54f118b45e38ce45abe27c'
         'c1b7315081daa2ebec1548b2d6ded197'
         'a8296d9e6397824d4156244a052d0eb9')
validpgpkeys=()

prepare() {
	cd "linux-$pkgver"
	cp "../logo_linux_clut224.ppm" drivers/video/logo/
	cp "../$pkgname.config" .config
}

build() {
	cd "linux-$pkgver"
	#make
}

package() {
	cd "linux-$pkgver"
	mkdir -p "${pkgdir}"/lib/modules
	mkdir -p -m 777 "${pkgdir}"/boot/
	#make INSTALL_MOD_PATH="${pkgdir}" modules_install
	#cp arch/x86_64/boot/bzImage "${pkgdir}/boot/${pkgver}-ULM"
	sed -i "s/REPLACE/${pkgver}/" "${srcdir}/${pkgname}.preset"
	install -D -m644 "${srcdir}/${pkgname}.preset" "${pkgdir}/etc/mkinitcpio.d/${pkgname}.preset"
}
